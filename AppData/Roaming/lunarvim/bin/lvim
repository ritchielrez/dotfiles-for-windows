#!/usr/bin/bash
set -eo pipefail

declare -r XDG_DATA_HOME="${XDG_DATA_HOME:-"$HOME/AppData/Roaming"}"
declare -r XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-"$HOME/AppData/Local"}"
echo "$XDG_CONFIG_HOME"
declare -r XDG_CACHE_HOME="${XDG_CACHE_HOME:-"$HOME/AppData/Temp"}"

declare -r LUNARVIM_RUNTIME_DIR="${LUNARVIM_RUNTIME_DIR:-"$XDG_DATA_HOME/lunarvim"}"
declare -r LUNARVIM_CONFIG_DIR="${LUNARVIM_CONFIG_DIR:-"$XDG_CONFIG_HOME/lvim"}"
echo "$LUNARVIM_CONFIG_DIR"
declare -r LUNARVIM_CACHE_DIR="${LUNARVIM_CACHE_DIR:-"$XDG_CACHE_HOME/lvim"}"
declare -r LUNARVIM_BASE_DIR="${LUNARVIM_BASE_DIR:-"$LUNARVIM_RUNTIME_DIR/lvim"}"

nvim -u "$LUNARVIM_RUNTIME_DIR/lvim/init.lua" $@
